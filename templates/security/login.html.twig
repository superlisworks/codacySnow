{% extends 'base.html.twig' %}

{% block body %}

<!-- ici commence le block (content) spécifique à la page  -->
<section id="contact"
	class="contact mbr-box mbr-section mbr-section--relative mbr-section--bg-adapted">
	<div class="container">
		<div class="col-md-6 col-sm-12">
			<div class="row">
				<h4>Snow Tricks</h4>
				<p class="libre-text mt-50">La plus grande communauté des gens
					qui font du snow et des tricks. Fonctionne aussi pour ceux qui
					utilisent des skis :)</p>
				<p>
					Pas encore inscrit : <a href="{{ path('security_registration') }}"
						class="default-btn"> c'est par ici <i
						class="fa fa-angle-double-right" aria-hidden="true"></i></a>
				</p>
			</div>
		</div>

		<!-- login block -->
		<div class=" col-md-offset-1 col-md-5 col-sm-12">
			<div class="row center">
				<div class="newsletter">
					<h4>Connexion</h4>
					
					{% if hasError %}
					  <div class="alert alert-danger">Le nom d'utilisateur ou le mot de passe est invalide</div>
					{%  endif %}

					<form action="{{ path('security_login') }}" method="post">
						<div class="form-group">
							<input placeholder="Adresse email ..." required name="_username"
								type="text" class="form-control">
						</div>
						<br>
						<div class="form-group">
							<div class="form-group">
								<input placeholder="Mot de passe ..." required name="_password"
									type="password" class="form-control">
							</div>
							<button id="submit_btn" class="default-btn">
								Connexion <i class="fa fa-angle-double-right" aria-hidden="true"></i>
							</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- ici fini le block (content) spécifique à la page  -->

{% endblock %}



